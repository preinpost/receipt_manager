<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TB_RECEIPT">
    <select id="selectOne" resultType="soo.receipt_writer.receipt.repository.dao.ReceiptInsertDAO">
        SELECT *
        FROM TB_RECEIPT
        WHERE USER_ID = #{userId}
        ;
    </select>

    <select id="getMaxSeq" parameterType="soo.receipt_writer.receipt.repository.dao.GetMaxSeqDAO" resultType="long">
        SELECT COALESCE(MAX(SEQ + 1), 0)
        FROM TB_RECEIPT
        WHERE USER_ID       = #{userId}
          AND PAYMENT_DATE  = #{paymentDate}
        ;
    </select>

    <select id="selectAll" parameterType="String" resultType="soo.receipt_writer.receipt.repository.dao.ReceiptSelectAllDAO">
        SELECT payment_date
              ,seq
              ,payment_amount
              ,payment_location
        FROM TB_RECEIPT
        WHERE USER_ID = #{userId}
          AND DEL_YN = 'N'
        ;
    </select>

    <insert id="insertOne" parameterType="soo.receipt_writer.receipt.repository.dao.ReceiptInsertDAO">
        INSERT INTO TB_RECEIPT (
             USER_ID
            ,PAYMENT_DATE
            ,SEQ
            ,PAYMENT_AMOUNT
            ,PAYMENT_LOCATION
        )
        VALUES (
             #{userId}
            ,#{paymentDate}
            ,#{seq}
            ,#{paymentAmount}
            ,#{paymentLocation}
        );
    </insert>

    <update id="removeReceipt" parameterType="soo.receipt_writer.receipt.repository.dao.ReceiptRemoveDAO">
        UPDATE TB_RECEIPT
        SET del_yn = 'Y'
        WHERE user_id       = #{userId}
          AND seq           = #{seq}
          AND payment_date  = #{paymentDate}
    </update>

    <select id="monthTotalAmount" parameterType="soo.receipt_writer.receipt.repository.dao.ReceiptCurrentMonthTotalAmountDAO" resultType="long">
        SELECT
        FROM TB_RECEIPT
        WHERE user_id = #{userId}

    </select>

</mapper>