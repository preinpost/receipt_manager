<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DB_RECEIPT">
    <select id="selectOne" resultType="java.util.HashMap">
        SELECT * FROM DB_RECEIPT;
    </select>

    <select id="selectAll" resultType="java.util.HashMap">
        SELECT * FROM DB_RECEIPT;
    </select>

    <insert id="insertOne" parameterType="soo.receipt_writer.domain.Receipt">
        INSERT INTO DB_RECEIPT (
             PAYMENT_DATE
            ,PAYMENT_AMOUNT
            ,PAYMENT_LOCATION
        )
        VALUES (
             #{paymentDate}
            ,#{paymentAmount}
            ,#{paymentLocation}
        );
    </insert>
</mapper>